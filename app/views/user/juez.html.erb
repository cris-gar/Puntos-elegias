<h1>Posibles Jueces</h1>

<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.nombre %> <%= user.apellido %></td>
          <% if user.role_id == 1 %>
              <td><%= link_to 'Create juez',  user_path(user.id), method: :put, data: { confirm: 'Are you sure?' }%></td>
          <% else %>
              <td><%= link_to 'Eliminar juez',  user_path(user.id), method: :put, data: { confirm: 'Are you sure?' }%></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'Back', root_path %>