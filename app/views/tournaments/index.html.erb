<p id="notice"><%= notice %></p>

<h1>Listado de Torneos</h1>

<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Fecha inicio</th>
      <th>Fecha termino</th>
      <th>Puntos minimo</th>
      <th>Jugadores maximo</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @tournaments.each do |tournament| %>
        <tr>
          <td><%= tournament.fecha_inicio %></td>
          <td><%= tournament.fecha_termino %></td>
          <td><%= tournament.puntos_minimo %></td>
          <td><%= tournament.jugadores_maximo %></td>
          <td><%= link_to 'Mostar', tournament, class: "btn btn-primary" %></td>
          <td><%= link_to 'Editar', edit_tournament_path(tournament), class: "btn btn-success" %></td>
          <td><%= link_to 'Borrar', tournament, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>


<%= link_to 'Nuevo Torneo', new_tournament_path, class: "btn btn-link" %>
