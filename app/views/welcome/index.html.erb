<h1>Tabla General</h1>

<div class="row">
  <div class="col-md-6">
  </div>
  <div class="col-md-4  col-md-offset-2 alert alert-info" role="alert">
    <p>El tornero inicia el <%=  @tournament.fecha_inicio.strftime("%d/%m/%Y") %> y termina el: <%= @tournament.fecha_termino.strftime("%d/%m/%Y") %></p>
  </div>
</div>


<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>#</th>
      <th>Jugador</th>
      <th>Points</th>
    </tr>
    </thead>

    <tbody>
    <% @final.each do |final| %>
        <% if( @tournament.puntos_minimo <= final[3]) %>
            <tr class="success">
              <td class="success"><%= final[0] %></td>
              <td class="success"><%= final[1] %> <%= final[2] %></td>
              <td class="success"><%= final[3] %></td>
            </tr>
        <% else%>
            <tr>
              <td><%= final[1] %> <%= final[2] %></td>
              <td><%= final[3] %></td>
            </tr>
        <% end %>

    <% end %>
    </tbody>

  </table>
</div>